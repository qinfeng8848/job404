<div class="col-md-12">
  <div class="job">
    <%= link_to("添加新工作", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>更新时间 </td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= render_job_status(job)%></td>
          <td><%= link_to(job.title, admin_job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.created_at %> </td>
          <td>

              <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", admin_job_path(job),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
                          <% if job.is_hidden %>

               <%= link_to("Publish", publish_admin_job_path(job) , :method => :post,
                           :class => "btn btn-xs btn-default") %>
             <% else %>
               <%= link_to("Hide", hide_admin_job_path(job), :method => :post,
                           :class => "btn btn-xs btn-default") %>
             <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
